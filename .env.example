# Logger Configuration
LOG_DIR=logs                    # Directory where log files will be stored
LOG_LEVEL=info                  # Logging level (debug, info, warn, error)
LOG_MAX_SIZE=20m               # Maximum size of each log file before rotation
LOG_MAX_FILES_APP=14d          # How long to keep application logs (days)
LOG_MAX_FILES_ERROR=30d        # How long to keep error logs (days)
LOG_MAX_FILES_EXCEPTIONS=30d   # How long to keep exception logs (days)
LOG_DATE_PATTERN=YYYY-MM-DD    # Date pattern for log file names
LOG_ZIPPED_ARCHIVE=true        # Whether to compress old log files
LOG_SERVICE_NAME=personal-finance-tracker  # Service name for log identification

# Other Environment Variables
NODE_ENV=development           # Application environment (development, production)
# ... existing environment variables ... 